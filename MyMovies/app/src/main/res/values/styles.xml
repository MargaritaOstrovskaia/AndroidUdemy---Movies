<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
    </style>

    <style name="BorderStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/colorSeparate</item>
        <item name="android:layout_margin">@dimen/dp_4</item>
    </style>

</resources>
